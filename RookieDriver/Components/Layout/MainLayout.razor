@inherits LayoutComponentBase
@inject NavigationManager navigationManager

<MudThemeProvider @bind-IsDarkMode="@isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
       Rookie Driver
        <MudSpacer />
        @if(RookieDriverContext.IsUserLoggedIn)
        {
            <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Secondary" aria-label="add to favorite" OnClick="@Logout"/>
        }else{
            <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Secondary" aria-label="add to favorite" OnClick="@Login" />
        }
        <MudToggleIconButton @bind-Toggled="@isDarkMode" Icon="@Icons.Material.Filled.DarkMode" Color="@Color.Error" Title="Switch To Dark"
                             ToggledIcon="@Icons.Material.Filled.LightMode" ToggledColor="@Color.Success" ToggledTitle="Switch To Light"/>
    </MudAppBar>
@*     <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer> *@
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>  
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _theme = new MudTheme();
    private bool isDarkMode;

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void Logout()
    {
        RookieDriverContext.IsUserLoggedIn = false;
        RookieDriverContext.LoggedInUsername = string.Empty;
    }

    void Login()
    {
        navigationManager.NavigateTo("/", true);
    }
}